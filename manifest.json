{
  "name": "Tab Groupie",
  "version": "2.0",
  "description": "Groups your tabs by domain automatically",
  "permissions": ["declarativeContent", "storage", "tabs", "tabGroups"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/groupie-16.png",
      "32": "images/groupie-32.png",
      "48": "images/groupie-48.png",
      "128": "images/groupie-128.png"
    }
  },
  "icons": {
    "16": "images/groupie-16.png",
    "32": "images/groupie-32.png",
    "48": "images/groupie-48.png",
    "128": "images/groupie-128.png"
  },
  "manifest_version": 3,
  "commands": {
    "toggle-mode": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Group tabs"
    }
  }
}
